<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="407dp"
        android:layout_height="127dp"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/percent"
            android:layout_toRightOf="@+id/percent"
            android:text="Line1"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/minAttendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="109dp"
            android:layout_marginRight="109dp"
            android:layout_toEndOf="@+id/percent"
            android:layout_toRightOf="@+id/percent"
            android:text="Min Attendance"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/attend"
            android:layout_width="71dp"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="93dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="148dp"
            android:layout_marginRight="148dp"
            android:layout_toEndOf="@+id/percent"
            android:layout_toRightOf="@+id/percent"
            android:text="Attended: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bunk"
            android:layout_width="64dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="338dp"
            android:layout_marginRight="338dp"
            android:text="Bunked: "
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bunked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="300dp"
            android:layout_marginRight="300dp"
            android:text="50"
            android:textColor="#A80202"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_add"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="246dp"
            android:layout_marginRight="246dp"
            android:background="@drawable/button_radius"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/image_add2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="66dp"
            android:layout_marginRight="66dp"
            android:background="@drawable/button_radius"
            android:src="@drawable/ic_add" />

        <TextView
            android:id="@+id/attended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/image_add2"
            android:layout_alignRight="@+id/image_add2"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-25dp"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="89dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginBottom="11dp"
            android:text="50"
            android:textColor="#009E00"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/percent"
            android:layout_width="86dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25sp"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>